                    <field name="tank_code"/>
                    <field name="start_date"/>
                    <field name="oil_code"/>
                    <field name="gun_ids"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="station_operation.tank_action_window">
            <field name="name">Tanks</field>
            <field name="res_model">station_operation.tank</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Tanks" id="station_operation.tank_menu" parent="station_operation.conf"
