<odoo>
    <data>


        <!-- stations tree -->
        <record model="ir.ui.view" id="station_operation.master_stations_sale_line_tree">
            <field name="name">Sale list</field>
            <field name="model">station_operation.station_day_end_close_sale_line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="station_name"/>
                    <field name="product_id"/>
                    <field name="qty"/>
                    <field name="line_amount"/>
                    <field name="type"/>
                    <field name="date_calc"/>
                </tree>
            </field>
        </record>


        <record id="sale_line_view_pivot" model="ir.ui.view">
            <field name="name">station_operation.station_day_end_close_sale_line.piv</field>
            <field name="model">station_operation.station_day_end_close_sale_line</field>
            <field name="arch" type="xml">
                <pivot string="Sales Analysis" sample="1">
                    <field name="station_name" type="row"/>
                    <field name="product_id" type="col"/>
                    <field name="line_amount" type="measure"/>
                    <field name="qty" type="measure"/>
                    <field name="date_calc" interval="day" type="row"/>
                </pivot>
            </field>
        </record>


        <record id="sale_line_view_graph" model="ir.ui.view">
            <field name="name">station_operation.station_day_end_close_sale_line.graph</field>
            <field name="model">station_operation.station_day_end_close_sale_line</field>
            <field name="arch" type="xml">
                <graph string="Sales Analysis" sample="1">
                    <field name="station_name"  />
                    <field name="line_amount" type="measure" />
<!--                    <field name="qty" type="measure" widget="timesheet_uom"/>-->
<!--                                        <field name="product_id"/>-->
                    <field name="date_calc" interval="day"/>
                </graph>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="station_operation.station_sale_line_action_window">
            <field name="name">Stations Sales</field>
            <field name="res_model">station_operation.station_day_end_close_sale_line</field>
            <field name="view_mode">pivot,kanban,graph,tree,form</field>
        </record>


        <!-- menu categories -->
        <menuitem name="Reports" id="station_operation.report" parent="station_operation.menu_root"/>

        <menuitem name="Sales Analysis" id="station_operation.station_menu_report" parent="station_operation.report"
                  action="station_operation.station_sale_line_action_window"/>


    </data>
</odoo>