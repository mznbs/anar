<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="bs_sales_integration.list">
      <field name="name">bs_sales_integration list</field>
      <field name="model">bs_sales_integration.bs_sales_integration</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="bs_sales_integration.action_window">
      <field name="name">bs_sales_integration window</field>
      <field name="res_model">bs_sales_integration.bs_sales_integration</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="bs_sales_integration.action_server">
      <field name="name">bs_sales_integration server</field>
      <field name="model_id" ref="model_bs_sales_integration_bs_sales_integration"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="bs_sales_integration" id="bs_sales_integration.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu 1" id="bs_sales_integration.menu_1" parent="bs_sales_integration.menu_root"/>
    <menuitem name="Menu 2" id="bs_sales_integration.menu_2" parent="bs_sales_integration.menu_root"/>
    <!-- actions -->
    <menuitem name="List" id="bs_sales_integration.menu_1_list" parent="bs_sales_integration.menu_1"
              action="bs_sales_integration.action_window"/>
    <menuitem name="Server to list" id="bs_sales_integration" parent="bs_sales_integration.menu_2"
              action="bs_sales_integration.action_server"/>
  </data>
</odoo>